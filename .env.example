# Cerebray Environment Variables
# Copy this file to .env and fill in your actual values

# Appwrite Configuration
APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=68930d9a002e313013dc
APPWRITE_API_KEY=your_appwrite_api_key_here

# PayPal Payment Configuration
# Get these from https://developer.paypal.com/developer/applications/
# For production: Use Live credentials
# For testing: Use Sandbox credentials
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_PLAN_ID=your_paypal_subscription_plan_id_here

# Server Configuration
PORT=8000

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Database Configuration (Optional)
DATABASE_URL=your_database_connection_string

# Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Development/Production
NODE_ENV=development